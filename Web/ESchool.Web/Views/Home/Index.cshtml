@using ESchool.Common
@model ESchool.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
    var num = 1;
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Класове</th>
            <th scope="col">Брой ученици</th>
            <th scope="col">Класен</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Classrooms)
        {
        <tr>
            <th scope="row">@(num++)</th>
            <td>

                <a href="@item.Description"></a>
               
            </td>
            <td>@item.StudentsCount</td>
            <td>@item.FullName</td>

        </tr>

        }

    </tbody>
</table>

