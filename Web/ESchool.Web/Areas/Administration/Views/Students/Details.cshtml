@model ESchool.Web.ViewModels.Students.StudentViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Име
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Фамилия
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Предмет
        </dt>
        <dd class="col-sm-10">
            @Model.CourseDescription
        </dd>
        <dt class="col-sm-2">
            Дата на раждане
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate.ToString("yyyy/MM/dd")
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="All">Back to List</a>
</div>

