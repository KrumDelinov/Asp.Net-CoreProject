@model ESchool.Web.ViewModels.Administration.Users.AllUsersViewModel
@{
    ViewData["Title"] = "AllUsers";

    var roles = string.Empty;
    var userId = string.Empty;
}


<div class="row">

    <div class="col-lg-12">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Users</h1>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h1>AllUsers</h1>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>UserName</th>
                                <th>Date</th>
                                <th>Roles</th>
                                <th>Add To Role</th>
                                <th>Remove From Role</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>UserName</th>
                                <th>Date</th>
                                <th>Roles</th>
                                <th>Add To Role</th>
                                <th>Remove From Role</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.AllUsers)
                            {
                               
                            <tr>
                                <td>
                                    @item.UserName
                                </td>
                                <td>
                                    @item.CreatedOn
                                </td>
                                <td>
                                    @(roles = string.Join(" | ", item.Roles.Select(x => x.Name)))
                                </td>
                                <td>

                                    <div class="btn">
                                        <a asp-action="UserDetails" asp-route-id="@item.UserId" class="btn btn-primary" style="width:auto">Add</a>
                                    </div>

                                </td>
                                <td>

                                    <div class="btn">
                                        <a asp-action="RemoveUserFromRole" asp-route-id="@item.UserId" class="btn btn-danger" style="width:auto">Remove</a>
                                    </div>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>