@model ESchool.Web.ViewModels.Grades.GradeViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>Grade</h4>
    <dl class="row">

        <dt class="col-sm-2">
            Паралелка
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Класен Ръководител
        </dt>
        <dd class="col-sm-10">
            @Model.TeacherFirstName
        </dd>
    </dl>
</div>


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Students</h1>



    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6> <a asp-controller="Students" asp-action="Create">Create New Student</a> </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr> 
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>BirthDate</th>
                            <th>Details</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>BirthDate</th>
                            <th>Details</th>
                            <th>Edit</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Students)
                        {
                        <tr>
                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.LastName
                            </td>
                            <td>
                                @item.BirthDate.ToString("yyyy/MM/dd")
                            </td>


                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div>
    <a asp-controller="Dashboard" asp-action="Index">Back to Dashboard</a>
</div>
<div>
    <a asp-action="All">Back to List</a>
</div>
