@model ESchool.Web.ViewModels.Teachers.TeacherViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>Teacher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Име
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Фамилия
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
          Предмет
        </dt>
        <dd class="col-sm-10">
            @Model.SubjectDescription
        </dd>
        <dt class="col-sm-2">
            UserId
        </dt>
        <dd class="col-sm-10">
            @(Model.UserId == null ? "Empty" : Model.UserId)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="All">Back to List</a>
</div>
