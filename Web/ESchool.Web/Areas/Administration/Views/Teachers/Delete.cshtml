@model ESchool.Web.ViewModels.Teachers.TeacherViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <div>
        <h4>Teacher</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Име
            </dt>
            <dd class="col-sm-10">
                @Model.FirstName
            </dd>
            <dt class="col-sm-2">
                Фамилия
            </dt>
            <dd class="col-sm-10">
                @Model.LastName
            </dd>
            <dt class="col-sm-2">
                Предмет
            </dt>
            <dd class="col-sm-10">
                @Model.SubjectDescription
            </dd>
            <dt class="col-sm-2">
                UserName
            </dt>
            <dd class="col-sm-10">
                @(Model.UserUserName == null ? "Empty" : Model.UserUserName)
            </dd>

        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="All">Back to List</a>
    </form>
</div>



