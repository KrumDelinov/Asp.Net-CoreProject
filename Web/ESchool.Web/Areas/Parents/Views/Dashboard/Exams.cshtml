@model ESchool.Web.ViewModels.Students.StudentForParentViewModel

@{
    ViewData["Title"] = "Attendances";

    string modelName = Model.FullName;
    
}

    <div class="container-fluid">

        <!-- Page Heading -->

        <div class="alert-heading">
          

            <h1 class="h3 mb-2 text-gray-800">@modelName</h1>
        </div>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                @*<input hidden asp-for="Id" />*@
               

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Teacher</th>
                                <th>Subject</th>
                                <th>ExamType</th>
                                <th>Grade</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Teacher</th>
                                <th>Subject</th>
                                <th>ExamType</th>
                                <th>Grade</th>
                                <th>Data</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.StudentExams)
                            {
                                <tr>
                                    <td>
                                        @item.TeacherFullName
                                    </td>
                                    <td>
                                        @item.TeacherSubjectDescription
                                    </td>
                                    <td>
                                        @item.ExamType
                                    </td>

                                    <td>
                                        @item.Result
                                    </td>

                                    <td>
                                        @item.CreatedOn.Substring(0, 16)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <div>
        <a asp-controller="Dashboard" asp-action="Index">Back to Dashboard</a>
       
     
    </div>

