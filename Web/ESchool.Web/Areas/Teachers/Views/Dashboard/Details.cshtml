@model ESchool.Web.ViewModels.Grades.CourseViewModel

@{
    ViewData["Title"] = "Details";

}


<div class="container-fluid">

    <div>
        <h4>Course</h4>
        <dl class="row">

            <dt class="col-sm-2">
                Паралелка
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Класен Ръководител
            </dt>
            <dd class="col-sm-10">
                @(Model.TeacherFirstName + " " + Model.TeacherLastName)
            </dd>
            <dt class="col-sm-2">
                Ученици
            </dt>
            <dd class="col-sm-10">
                @Model.StudentsCount
            </dd>
        </dl>
    </div>
    @*<h6> <a asp-action="AddTeachersToCourse" asp-route-id="@Model.Id">AddNewSubjects</a> </h6>*@



    <div class="row">

        <div class="col-lg-12">
            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Students</h1>
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">

                 
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>BirthDate</th>
                                    <th>New Exam</th>
                                    <th>New Attendace</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>BirthDate</th>
                                    <th>New Exam</th>
                                    <th>New Attendace</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.Students)
                                {
                                    <tr>
                                        <td>
                                            @(item.FirstName + " " + item.LastName)
                                        </td>
                                        <td>
                                            @item.BirthDate.ToString("yyyy/MM/dd")
                                        </td>
                                     
                                        <td>
                                            <a asp-controller="Exams" asp-action="Create" asp-route-id="@item.Id"
                                               class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                                <i class="fas fa-download fa-sm text-white-50"></i>Add Exam
                                            </a>
                                        <td>
                                            <a asp-controller="Attendances" asp-action="Create"  asp-route-id="@item.Id"
                                               class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                                <i class="fas fa-download fa-sm text-white-50"></i>Add Attendace
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<div>
    <a asp-controller="Dashboard" asp-action="Index">Back to Dashboard</a>
</div>




